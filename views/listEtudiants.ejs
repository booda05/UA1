<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title || 'Liste des étudiants' %></title>
    <link rel="stylesheet" href="/css/listStyle.css">
</head>
<body>
    <h1><%= title || 'Liste des étudiants' %></h1>
    <div class="search-container">
        <form action="/etudiants/search" method="get">
            <input type="text" name="query" placeholder="Rechercher un étudiant">
            <button type="submit">Rechercher</button>
        </form>
    </div>
    <div class="buttons-container">
        <a href="/" class="button">Accueil</a>
        <a href="/etudiants/add" class="button">Ajouter un étudiant</a>
    </div>    
    <% var found = typeof found !== 'undefined' ? found : true; %>
    <% var searchPerformed = searchPerformed || false; %>
    <% if (searchPerformed) { %>
        <div class="buttons-container">
            <a href="/etudiants/list" class="button">Retour</a>
        </div>
    <% } %>
   
    
    <% if (!found) { %>
        <p>Étudiant introuvable.</p>
    <% } else { %>
        <table id="student-table">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                </tr>
            </thead>
            <tbody>
                <% etudiants.forEach(function(student) { %>
                    <tr>
                        <td scope="row"><%= student.nom %></td>
                        <td><%= student.prenom %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</body>
</html>